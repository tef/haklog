#!/usr/bin/env haklog

foo = "1 2 + 5 *"

ops = [ "+",'add "*",'mul ]

parse ~/^\s*$/ :- []
parse ~/^\d+:n \s*$/ ++ t :- {number n}, { once parse t}
parse ~/^.:o \s*$/ ++ t :- {o,f in ops; f,{once parse t}}
parse x :- say "syntax error: " x and  fail

exec [] it :- it
exec 'add,op a,b,it :- once exec op {a + b},it
exec 'mul,op a,b,it :- once exec op {a * b},it
exec i,op it :- once exec op i,it

x is parse foo
say "input: " x
y is exec x []
say "output: " y
